@model CustomerListViewModel

<form class="container" action="/customer">
    <div class="input-group">
        <input type="text" placeholder="Search for..." name="search">
        <span class="input-group-btn">
            <button class="btn btn-success" type="submit">
                <i class="fa fa-search fa-fw"></i>Search
            </button>
        </span>
    </div>
</form>
<br />

<div class="container">
    @if (Model.OldCustomers != null || Model.NewCustomers != null)
    {
        <table class="container" style="width:100%">
            <tr>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>City</th>
                <th>Postal Code</th>
            </tr>

            @if (Model.OldCustomers != null)
            {
                @foreach (var item in Model.OldCustomers)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.MiddleName</td>
                        <td>@item.LastName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.PostalCode</td>
                        <td>(old customer)</td>
                        <td><a class="btn btn-outline-info" asp-action="register" asp-route-id="@item.OldDbId">Order</a></td>
                    </tr>
                }
            }

            @if (Model.NewCustomers != null)
            {
                @foreach (var item in Model.NewCustomers)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.MiddleName</td>
                        <td>@item.LastName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.PostalCode</td>
                        <td>(new customer)</td>
                        <td><a class="btn btn-outline-info" asp-controller="Order" asp-action="Index" asp-route-id="@item.ExposeId">Order</a></td>
                    </tr>
                }
            }
        </table>
    }
    else
    {
        <div>No results found, are you misspelling something?</div>
    }
</div>

<br />
<form class="container" action="/Customer/Register">
    <button class="btn btn-success" type="submit">
        <i class="fa fa-search fa-fw"></i>New Customer
    </button>
</form>
